<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jscenter.test.com.stethotext.MainActivity"
>


    <EditText
        android:id="@+id/url"
        android:hint="请求的网络地址"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_alignParentTop="true"/>
    <Button
        android:id="@+id/button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请求网络"/>
    <EditText android:id="@+id/key" android:layout_width="match_parent"
              android:hint="key"
              android:layout_height="wrap_content" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" android:layout_alignParentTop="true"/>
    <EditText android:id="@+id/value" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:layout_alignParentLeft="true"
              android:hint="value"
              android:layout_alignParentStart="true" android:layout_alignParentTop="true"
              android:layout_gravity="center_horizontal"/>
    <Button android:id="@+id/sp" style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="SP操作"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:layout_width="match_parent"
                  android:id="@+id/content"
                  android:layout_height="match_parent"/>
    </ScrollView>
</LinearLayout>
